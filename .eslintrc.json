{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx", "formatjs", "@cspell"],
  "rules": {
    "@cspell/spellchecker": [
      "error",
      { "checkComments": true, "autoFix": false }
    ],
    "formatjs/no-offset": "error",
    "formatjs/no-id": "error",
    "@nrwl/nx/enforce-module-boundaries": [
      "warn",
      {
        "enforceBuildableLibDependency": true,
        "allow": [],
        "depConstraints": [
          {
            "sourceTag": "*",
            "onlyDependOnLibsWithTags": ["*"]
          }
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "apps/web/**/*.ts",
        "apps/web/**/*.tsx",
        "apps/web/**/*.js",
        "apps/web/**/*.jsx"
      ],
      "plugins": ["react-hooks", "react", "mobx"],
      "extends": ["plugin:mobx/recommended", "next/core-web-vitals"],
      "rules": {
        "mobx/exhaustive-make-observable": "warn",
        "mobx/unconditional-make-observable": "error",
        "mobx/missing-make-observable": "error",
        // NOTE: this is disabled because it is causing false positives
        "mobx/missing-observer": "off",
        "mobx/no-anonymous-observer": "warn",
        "react-hooks/exhaustive-deps": ["warn"]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {
        "@typescript-eslint/no-unused-vars": [
          "error",
          {
            "varsIgnorePattern": "[_].*",
            "argsIgnorePattern": "[_].*"
          }
        ],
        "array-callback-return": ["error"],
        "@nrwl/nx/enforce-module-boundaries": ["warn"]
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    },
    {
      "files": [
        "*.spec.ts",
        "*.spec.tsx",
        "*.spec.js",
        "*.spec.jsx",
        "*.test.ts"
      ],
      "env": {
        "jest": true
      },
      "rules": {
        "@typescript-eslint/no-non-null-assertion": ["off"]
      }
    },
    {
      "files": "*.json",
      "parser": "jsonc-eslint-parser",
      "rules": {}
    }
  ]
}
