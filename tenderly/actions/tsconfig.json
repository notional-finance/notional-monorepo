{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "",
    "sourceMap": true,
    "strict": true,
    "types": [ "@types/node", "@types/jest"],
    "target": "es2020"
  },
  "exclude": [
    "**/*.spec.ts"
  ],
  "include": [
    "src/*"
  ]
}
