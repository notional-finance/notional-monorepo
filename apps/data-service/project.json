{
  "name": "data-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/data-service/src",
  "projectType": "application",
  "targets": {
    "build": {
      "outputFileName": "index.js",
      "executor": "@nrwl/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "platform": "node",
        "target": "node22",
        "format": ["cjs"],
        "compiler": "tsc",
        "external": [
          "pg-query-stream",
          "sqlite3",
          "oracledb",
          "tedious",
          "mysql2",
          "mysql",
          "better-sqlite3"
        ],
        "esbuildOptions": {},
        "outputPath": "dist/apps/data-service",
        "main": "apps/data-service/src/index.ts",
        "tsConfig": "apps/data-service/tsconfig.json"
      }
    },
    "deploy-gcp": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cd ./apps/data-service/ && sh ./deploy.sh data-service",
          "cd ./apps/data-service/ && sh ./deploy.sh cron-service"
        ]
      },
      "parallel": true,
      "dependsOn": ["build"]
    },
    "deploy-cron": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["sh ./apps/data-service/deploy-cron.sh"]
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "data-service:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/data-service/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
